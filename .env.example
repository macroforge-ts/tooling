# Copy this file to .env and update MACROFORGE_ROOT to your local path
MACROFORGE_ROOT=/path/to/macroforge-ts
GITHUB_ORG=macroforge-ts
SOURCE_REPO=https://github.com/macroforge-ts/macroforge-ts.git

# Rust Crates
CRATES_ROOT=$MACROFORGE_ROOT/crates
MACROFORGE_TS_CRATE=$CRATES_ROOT/macroforge_ts
MACROFORGE_TS_MACROS_CRATE=$CRATES_ROOT/macroforge_ts_macros
MACROFORGE_TS_SYN_CRATE=$CRATES_ROOT/macroforge_ts_syn
MACROFORGE_TS_QUOTE_CRATE=$CRATES_ROOT/macroforge_ts_quote

# Extensions (git submodules)
EXTENSIONS_ROOT=$CRATES_ROOT/extensions
VTSLS_MACROFORGE_EXT=$EXTENSIONS_ROOT/vtsls-macroforge
SVELTE_MACROFORGE_EXT=$EXTENSIONS_ROOT/svelte-macroforge

# NPM Packages
PACKAGES_ROOT=$MACROFORGE_ROOT/packages
SHARED_PKG=$PACKAGES_ROOT/shared
TYPESCRIPT_PLUGIN_PKG=$PACKAGES_ROOT/typescript-plugin
VITE_PLUGIN_PKG=$PACKAGES_ROOT/vite-plugin
SVELTE_PREPROCESSOR_PKG=$PACKAGES_ROOT/svelte-preprocessor
SVELTE_LANGUAGE_SERVER_PKG=$PACKAGES_ROOT/svelte-language-server
MCP_SERVER_PKG=$PACKAGES_ROOT/mcp-server

# Tooling
TOOLING_ROOT=$MACROFORGE_ROOT/tooling
SCRIPTS_ROOT=$TOOLING_ROOT/scripts
PLAYGROUND_ROOT=$TOOLING_ROOT/playground
PLAYGROUND_MACRO=$PLAYGROUND_ROOT/macro
PLAYGROUND_SVELTE=$PLAYGROUND_ROOT/svelte
PLAYGROUND_VANILLA=$PLAYGROUND_ROOT/vanilla
PLAYGROUND_TESTS=$PLAYGROUND_ROOT/tests
TOOLING_TESTS=$TOOLING_ROOT/tests

# Website & Docs
WEBSITE_ROOT=$MACROFORGE_ROOT/website
DOCS_ROOT=$MACROFORGE_ROOT/docs
